<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="megad"
						xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
						xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">


<thing-type id="standart">

		<supported-bridge-type-refs>
			<bridge-type-ref id="device"/>
		</supported-bridge-type-refs>

		<label>MegaD Standart Thing</label>
		<description>Binding for standart Megad features</description>

		<channels>
			<channel id="in" typeId="in" />
			<channel id="incount" typeId="incount"></channel>
			<channel id="out" typeId="out"></channel>
			<channel id="dimmer" typeId="dimmer"></channel>
			<channel id="m2signal" typeId="m2signal"></channel>
			<channel id="click" typeId="click"></channel>
			<channel id="onewire" typeId="onewire"></channel>
			<channel id="adc" typeId="adc"></channel>
			<channel id="at" typeId="at"></channel>
			<channel id="st" typeId="st"></channel>
			<channel id="ib" typeId="ib"></channel>
			<channel id="wiegand" typeId="wiegand"></channel>
			<channel id="tget" typeId="tget"></channel>
			<channel id="contact" typeId="contact"></channel>
			<channel id="i2cdisplay" typeId="i2cdisplay"></channel>
			<channel id="smsphone" typeId="smsphone"></channel>
			<channel id="smstext" typeId="smstext"></channel>
		</channels>

		<config-description>
			<parameter name="port" type="text" required="true">
				<label>port</label>
				<description>Port number to access the device channel.</description>
				<default>0</default>
			</parameter>
			<parameter name="refresh" type="integer" required="true">
				<label>refresh</label>
				<description>refresh interval channel</description>
				<default>30</default>
			</parameter>
		</config-description>

</thing-type>

<thing-type id="i2c">
	<supported-bridge-type-refs>
			<bridge-type-ref id="device"/>
	</supported-bridge-type-refs>

		<label>MegaD I2C Sensors</label>
		<description>Binding for I2C sensors features of Megadevice</description>

		<channels>
			<channel id="temp" typeId="temp"></channel>
			<channel id="humidity" typeId="humidity"></channel>
			<channel id="pressure" typeId="pressure"></channel>
			<channel id="gas" typeId="gas"></channel>
			<channel id="other" typeId="other"></channel>
		</channels>

		<config-description>
			<parameter name="port" type="text" required="true">
				<label>port</label>
				<description>Port number to access the device channel.</description>
				<default>0</default>
			</parameter>
			<parameter name="refresh" type="integer" required="true">
				<label>refresh</label>
				<description>refresh interval channel</description>
				<default>30</default>
			</parameter>
		</config-description>
</thing-type>

	<thing-type id="megad2w">
		<supported-bridge-type-refs>
			<bridge-type-ref id="device"/>
		</supported-bridge-type-refs>

		<label>MegaD-2W Thing</label>
		<description>Thing for module MegaD-2W</description>

		<channels>
			<channel id="a" typeId="a"></channel>
			<channel id="b" typeId="b"></channel>
		</channels>

		<config-description>
			<parameter name="port" type="text" required="true">
				<label>port</label>
				<description>Port number to access the device channel.</description>
				<default>0</default>
			</parameter>
			<parameter name="addr" type="text">
				<label>Address from Devices List</label>
				<description></description>
				<default>0</default>
			</parameter>
			<parameter name="refresh" type="integer" required="true">
				<label>refresh</label>
				<description>refresh interval channel</description>
				<default>30</default>
			</parameter>
		</config-description>
	</thing-type>


<thing-type id="1wireaddress">
	<supported-bridge-type-refs>
			<bridge-type-ref id="1wirebus"/>
	</supported-bridge-type-refs>
		<label>MegaD 1wire bus Thing</label>
		<description>Binding for 1wire bus feature of Megadevice</description>

		<channels>
			<channel id="1wtemp" typeId="1wtemp"></channel>
		</channels>

		<config-description>
			<parameter name="address" type="text" required="true">
				<label>address of 1-wire sensor</label>
			</parameter>
		</config-description>
</thing-type>

	<thing-type id="extender">
		<supported-bridge-type-refs>
			<bridge-type-ref id="extenderport"/>
		</supported-bridge-type-refs>
		<label>MegaD MCP23008/MCP23017 extender port selector Thing</label>
		<description>Binding for I2C extender feature of Megadevice</description>

		<channels>
			<channel id="extin" typeId="extin"></channel>
			<channel id="extout" typeId="extout"></channel>
		</channels>

		<config-description>
			<parameter name="extport" type="text">
				<label>Port number of extender</label>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="in">
		<item-type>Switch</item-type>
		<label>Input</label>
		<description>Port set as  input signal for switch using</description>
	</channel-type>
	<channel-type id="incount">
		<item-type>Number</item-type>
		<label>Input counter</label>
		<description>Incoming press counter</description>
	</channel-type>
	<channel-type id="out">
		<item-type>Switch</item-type>
		<label>Output</label>
		<description>Port set as output for switch using</description>
	</channel-type>
	<channel-type id="dimmer">
		<item-type>Dimmer</item-type>
		<label>Dimmer</label>
		<description>Dimmer used as output</description>
	</channel-type>
	<channel-type id="m2signal">
		<item-type>Switch</item-type>
		<label>Long press switch</label>
		<description>React if long press from mega detected</description>
	</channel-type>
	<channel-type id="click">
		<item-type>Number</item-type>
		<label>Click</label>
		<description>Counter, reacts if click mode enabled in megad</description>
	</channel-type>
	<channel-type id="temp">
		<item-type>Number:Temperature</item-type>
		<label>Temperature</label>
		<description>Temperature from sensor</description>
		<state readOnly="true" pattern="%.1f 째C"></state>
	</channel-type>
	<channel-type id="1wtemp">
		<item-type>Number:Temperature</item-type>
		<label>Temperature</label>
		<description>Temperature from 1-wire sensor</description>
		<state readOnly="true" pattern="%.1f 째C"></state>
	</channel-type>
	<channel-type id="humidity">
		<item-type>Number:Dimensionless</item-type>
		<label>Humidity</label>
		<description>Humidity from sensor</description>
		<state readOnly="true" pattern="%.1f"></state>
	</channel-type>
	<channel-type id="pressure">
		<item-type>Number:Dimensionless</item-type>
		<label>Pressure</label>
		<description>Pressure</description>
		<state readOnly="true" pattern="%.1f"></state>
	</channel-type>
	<channel-type id="gas">
		<item-type>Number:Dimensionless</item-type>
		<label>Gas</label>
		<description>Gas</description>
		<state readOnly="true" pattern="%.1f"></state>
	</channel-type>
	<channel-type id="other">
		<item-type>Number</item-type>
		<label>Other values</label>
		<description>Other values</description>
		<state readOnly="true"></state>
	</channel-type>
	<channel-type id="i2c">
		<item-type>String</item-type>
		<label>I2C</label>
		<description>I2C</description>
		<state readOnly="true"></state>
	</channel-type>
	<channel-type id="onewire">
		<item-type>Number:Temperature</item-type>
		<label>Temperature Onewire</label>
		<description>Temperature from Onewire sensor</description>
		<state readOnly="true" pattern="%.1f 째C"></state>
	</channel-type>
	<channel-type id="adc">
		<item-type>Number</item-type>
		<label>ADC value</label>
		<description>ADC value</description>
		<state readOnly="true" pattern="%d"></state>
	</channel-type>
	<channel-type id="at">
		<item-type>Number:Temperature</item-type>
		<label>Alarm temp</label>
		<description>Alarm if temperature too high</description>
		<state readOnly="true" pattern="%.1f 째C"></state>
	</channel-type>
	<channel-type id="st">
		<item-type>Number</item-type>
		<label>Starting Mega</label>
		<description>Flag, that Mega started</description>
		<state readOnly="true" pattern="%d"></state>
	</channel-type>
	<channel-type id="ib">
		<item-type>Text</item-type>
		<label>Ibutton</label>
		<description></description>
		<state readOnly="true" pattern="%s"></state>
	</channel-type>
	<channel-type id="wiegand">
		<item-type>Text</item-type>
		<label>Wiegand</label>
		<description>Wiegand-26 protocol input </description>
		<state readOnly="true" pattern="%s"></state>
	</channel-type>
	<channel-type id="tget">
		<item-type>Number:Temperature</item-type>
		<label>Megad temp</label>
		<description>Temperature of MegaDevice</description>
		<state readOnly="true" pattern="%d"></state>
	</channel-type>
	<channel-type id="contact">
		<item-type>Contact</item-type>
		<label>Closed OR Open</label>
		<description>Indicates input as contact/ Closed when ON Open when OFF</description>
		<state readOnly="true" pattern="%s"></state>
	</channel-type>
	<channel-type id="i2cdisplay">
		<item-type>Text</item-type>
		<label>i2cdisplay</label>
		<description>i2cdisplay </description>
		<state readOnly="true" pattern="%s"></state>
	</channel-type>
		<channel-type id="smsphone">
		<item-type>String</item-type>
		<label>sms_phone</label>
		<description>sms_phone</description>
		<state readOnly="true"></state>
	</channel-type>
		<channel-type id="smstext">
		<item-type>String</item-type>
		<label>sms_text</label>
		<description>sms_text</description>
		<state readOnly="true"></state>
	</channel-type>
	<channel-type id="extin">
		<item-type>Switch</item-type>
		<label>Input</label>
		<description>Port set as  input signal for switch using extender</description>
	</channel-type>
	<channel-type id="extout">
		<item-type>Switch</item-type>
		<label>Output</label>
		<description>Port set as output for switch using extender</description>
	</channel-type>
	<channel-type id="a">
		<item-type>Switch</item-type>
		<label>Output A</label>
		<description>Port set as output for switch using</description>
	</channel-type>
	<channel-type id="b">
		<item-type>Switch</item-type>
		<label>Output B</label>
		<description>Port set as output for switch using</description>
	</channel-type>
</thing:thing-descriptions>
